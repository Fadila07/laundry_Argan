<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#888588">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="396dp"
        android:fontFamily="monospace"
        android:text="Welcome To Argan Laundry"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cm"
        android:layout_width="152dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:text="Data Cuci Masuk"
        android:onClick="datCuci"
        app:layout_constraintBottom_toTopOf="@+id/transaksi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/transaksi"
        android:layout_width="152dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:text="Data Transaksi"
        app:layout_constraintBottom_toTopOf="@+id/laporan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/laporan"
        android:layout_width="152dp"
        android:layout_height="44dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:text="Laporan"
        android:onClick="lap"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="#D81B60"
        android:onClick="keluar"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_pelanggan"
        android:layout_width="152dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:onClick="clickdapel"
        android:text="Data Pelanggan"
        app:layout_constraintBottom_toTopOf="@+id/cm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.222" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175dp"
        android:layout_height="153dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871"
        app:srcCompat="@drawable/icons8_washing_machine_64" />

</androidx.constraintlayout.widget.ConstraintLayout>